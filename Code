            var audio = document.getElementsByTagName("audioPlayer");
        
            function playAudio() {
                audio.play();
            }
            function pauseAudio() {
                audio.pause();
            }
            function stopAudio() {
                audio.pause();
                audio.currentTime = 0;
            }
        </script>
